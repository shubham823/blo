<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui">
	<ui:style>
	.left_menu_title {
   cursor: pointer;
}
.panel{
   background: url("http://2.bp.blogspot.com/-x4D3EPELYRU/VMHu52a4qUI/AAAAAAAAHek/EmnIgqTtu_U/s0/fon116%2B2160x1920.png");
   background-size: 100%;
   padding: 0px !important;
   padding-top: 40% !important;
 }
 .fieldPanel{
   background: white;
   padding: 6%;
 }
 .imgProfile{
   margin-top: -95px;
   width:33%;
   margin-left: 33%;
   border: 5px solid #fff;
 }
 .rowAction{
  margin-top: 20px;
 }
 .login_demo{
   padding: 4%;
 }
	</ui:style>
	
	<g:HTMLPanel>
	
	
	
	 <m:MaterialRow  addStyleNames="{style.login_demo}">
  <m:MaterialColumn grid="s12 m8 l6" offset="l3" >
   <m:MaterialPanel shadow="1" addStyleNames="{style.panel}">
    <m:MaterialPanel addStyleNames="{style.fieldPanel}">
     <m:MaterialImage url="https://www.ebs-oss.com/imgs/user.png" type="CIRCLE" addStyleNames="{style.imgProfile} z-depth-1"/>
     <m:MaterialTextBox type="EMAIL" placeholder="Email" ui:field="t1"/>
     <m:MaterialTextBox type="PASSWORD" placeholder="Password" ui:field="t2"/>
     <m:MaterialButton ui:field="b1" backgroundColor="ORANGE" waves="LIGHT" text="Log In" width="100%"/>
     <m:MaterialRow addStyleNames="{style.rowAction}">
      <m:MaterialColumn grid="s12 m12 l6">
       <g:Label text="Don't have account Sign up here" styleName="{style.left_menu_title}" ui:field="l" ></g:Label>
      </m:MaterialColumn>
     </m:MaterialRow>
    </m:MaterialPanel>
   </m:MaterialPanel>
  </m:MaterialColumn>
 </m:MaterialRow>

	
	

	</g:HTMLPanel>
</ui:UiBinder> 
